<?xml version="1.0" encoding="UTF-8"?>
<configuration>
	<jmxConfigurator />

	<appender name="console" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%d %5p %40.40c:%4L - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="file" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS_PATH:-./logs}/tbot-ruler.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOGS_PATH:-./logs}/tbot-ruler-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>100MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%d %5p %40.40c:%4L - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="jwavezFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS_PATH:-./logs}/jwavez.log</file>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOGS_PATH:-./logs}/jwavez-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>100MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%d %5p %40.40c:%4L - %m%n</pattern>
		</encoder>
	</appender>

	<appender name="errorFile" class="ch.qos.logback.core.rolling.RollingFileAppender">
		<file>${LOGS_PATH:-./logs}/tbot-ruler-errors.log</file>
		<filter class="ch.qos.logback.classic.filter.LevelFilter">
			<level>ERROR</level>
			<onMatch>ACCEPT</onMatch>
			<onMismatch>DENY</onMismatch>
		</filter>
		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
			<fileNamePattern>${LOGS_PATH:-./logs}/tbot-ruler-errors-%d{yyyy-MM-dd}.log</fileNamePattern>
			<maxHistory>30</maxHistory>
			<totalSizeCap>100MB</totalSizeCap>
		</rollingPolicy>
		<encoder>
			<pattern>%d %5p %40.40c:%4L - %m%n</pattern>
		</encoder>
	</appender>

	<root level="${APP_LOGGING_LEVEL:-INFO}">
		<appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="errorFile" />
	</root>
	
	<logger level="${TBOT_LOGGING_LEVEL:-INFO}" name="com.tbot.ruler" additivity="false">
        <appender-ref ref="console" />
		<appender-ref ref="file" />
		<appender-ref ref="errorFile" />
	</logger>
	
	<logger level="${RPOSCRO_LOGGING_LEVEL:-DEBUG}" name="com.rposcro.jwavez" additivity="false">
        <appender-ref ref="console" />
		<appender-ref ref="jwavezFile" />
	</logger>

</configuration>
